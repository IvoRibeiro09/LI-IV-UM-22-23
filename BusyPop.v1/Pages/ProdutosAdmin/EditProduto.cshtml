@page
@model BusyPop.Pages.ProdutosAdmin.EditarProdutoModel
@{
}
<br />
<h2>Editar Produto</h2>

@if (Model.errorMsg.Length > 0){
	<div class='alert alert-warming alert-dismissible fade show' role='alert'>
		<storng>@Model.errorMsg</storng>
		<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='close'></button>
	</div>
}

<form method="POST">
	<input type="hidden" name="id" value="@Model.info.id" />
	<div class="row mb-3">
		<label class="col-sm 3 col-form-label">Nome do Produto</label>
		<div class="col-sm 6">
			<input type="text" class="form-control" name ="nome" value="@Model.info.nome" />
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm 3 col-form-label">Quantidade (em Kilos)</label>
		<div class="col-sm 6">
			<input type="text" class="form-control" name ="quantidade" value="@Model.info.quantidade" />
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm 3 col-form-label">Preço por kilo</label>
		<div class="col-sm 6">
			<input type="text" class="form-control" name ="price" value="@Model.info.price" />
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm 3 col-form-label">Adicione o link para a sua imagem</label>
		<div class="col-sm 6">
			<input type="text" class="form-control" name="imagelink" value="@Model.info.imagelink" />
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm 3 col-form-label">Stand Id</label>
		<div class="col-sm 6">
			<input type="text" class="form-control" name="standId" value="@Model.info.standId" />
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm 3 col-form-label">Descrição</label>
		<div class="col-sm 6">
			<input type="text" class="form-control" name="descri" value="@Model.info.descri" />
		</div>
	</div>

	@if(Model.sucessMsg.Length > 0){
		<div class="row mb-3">
			<div class="col-sm-9">
				<div class='alert alert-success alertalert-dismissible fade show' role='alert'>
					<strong>@Model.sucessMsg</strong>
					<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
				</div>
			</div>
		</div>
	}


	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Editar Produto</button>
		</div>
		<div class="col-sm 3 d-grid">
			<a class="btn btn-outline-primary" href="/" role="button">Cancelar</a>
		</div>
	</div>
</form>